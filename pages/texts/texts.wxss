.buttons{
  display:inline;
  justify-content: space-between;
  font-size:30rpx;
}
.buttons button{   
  font-size:30rpx;
  display: inline-block;
  width:50%;
  border-radius:10rpx;
  background:#f7e5b1;
}

  .item{
    display: flex;
    flex-direction: column;   
    padding:10rpx; 
    background: lightblue;
  }
  .item .title{
    text-align: center;
    color:#000;
    font-size: 40rpx;
    font-weight: bold;
  }
  .item .center{
    display:flex;
    justify-content: space-around;
    font-size: 30rpx;
    margin:20rpx 60px;
    color:#838B8B;
  }
  .item .digest{
    font-size: 28rpx;
    color:#888;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 20rpx;
  }
  .item .content{
    font-size:34rpx;
  }